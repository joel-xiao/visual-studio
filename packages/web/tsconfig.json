{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noUnusedLocals": false,
    "paths": {
      "@/*": ["./src/*"],
      "@v/*": ["./src/views/*"],
      "@c/*": ["./src/components/*"],
      "@u/*": ["./src/utils/*"],
      "@a/*": ["./src/assets/*"],
      "@s/*": ["./src/service/*"],
      "@api/*": ["./src/service/api/*"],
      "@p/*": ["./src/plugins/*"],
      "@d/*": ["./src/directives/*"],
      "@hooks/*": ["./src/hooks/*"]
    },
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "types": ["vite/client", "@types/node"],
  },
  "include": ["./src/**/*.ts", "./src/**/*.d.ts", "./src/**/*.tsx", "./src/**/*.vue", "./src/vite.env.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
