{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "visual-craft",
  "version": "0.0.1",
  "identifier": "com.visual-craft.tauri",
  "build": {
    "devUrl": "http://localhost:1420",
    "frontendDist": "../web/dist"
  },
  "app": {
    "windows": [
      {
        "title": "VisualCraft",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "maximized": false,
        "fullscreen": false,
        "dragDropEnabled": false,
        "visible": true,
        "label": "main",
        "url": "index.html"
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": [
      "app"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
