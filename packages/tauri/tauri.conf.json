{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "http://localhost:1420",
    "distDir": "../web/dist"
  },
  "package": {
    "productName": "visual-studio",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "visual Studio",
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "maximized": true,
        "fullscreen": false,
        "fileDropEnabled": false,
        "visible": false
      },
      {
        "width": 600,
        "height": 400,
        "center": true,
        "decorations": false,
        "url": "splashscreen/index.html",
        "label": "splashscreen"
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.build",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
