{
  "name": "visualization-editor.monorepo",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "dev:web": "pnpm -F @visualization-editor/web dev",
    "wait:web": "wait-on --interval 1000 --timeout 60000 tcp:1420",
    "build:web": "pnpm -F @visualization-editor/web build",
    "dev:tauri": "concurrently \"pnpm dev:web\" \"pnpm wait:web && pnpm -F @visualization-editor/tauri dev\"",
    "build:tauri": "pnpm -F @visualization-editor/web build:tauri && pnpm -F @visualization-editor/tauri build",
    "dev:electron": "concurrently \"pnpm dev:web\" \"pnpm wait:web && pnpm -F @visualization-editor/electron dev\"",
    "build:electron": "pnpm -F @visualization-editor/web build:electron && pnpm -F @visualization-editor/electron build",
    "log": "conventional-changelog -p custom-config -i CHANGELOG.md -s -r 0  -n ./config/changelog-option.js",
    "sync:config": "node scripts/sync-project-config.js",
    "prepare": "husky install"
  },
  "changelog": {
    "bugsUrl": "https://github.com/huoyou/vue_cli3/issues/",
    "emojis": true,
    "authorName": true,
    "authorEmail": true
  },
  "lint-staged": {},
  "optionalDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "wait-on": "^9.0.3"
  }
}
